<%- include("../includes/head.ejs") %>
<%- include("../bootstrap.ejs") %> 
  <link rel="stylesheet" href="/css/form.css">
  
  </head>

  <body>
    <%- include("../includes/menu.ejs") %> 
    <div class="main">
      <section class="signup">
        <div class="container">
          <div class="signup-content">
            <div class="signup-form">
              <h2 class="form-title"><%= editUserAction %></h2>
              <!-- <form class="register-form" id="register-form" action="/users/<% if (editUserAction==='Sign Up') { %>add-user<% } else { %>edit-user<% } %>"  method="POST" enctype="multipart/form-data"> -->
              <form class="register-form" id="register-form" action="/users/<% if (editUserAction==='Sign Up') { %>add-user<% } else { %>edit-user<% } %>"  method="POST" >
                <% if(validationErrs.firstName){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.firstName %> 
                  </div>
                <% } %>
                <div class="form-group <% if(validationErrs.firstName){ %><%='invalid'%><% } %>">
                  <label for="firstName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                  <input type="text" name="firstName" placeholder="First Name" value="<% if(input.firstName){ %><%=input.firstName%><% } %>"/>
                </div>
                <% if(validationErrs.lastName){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.lastName %> 
                  </div>
                <% } %>
                <div class="form-group <% if(validationErrs.lastName){ %><%='invalid'%><% } %>">
                  <label for="lastName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                  <input type="text" name="lastName" placeholder="Last Name" value="<% if(input.lastName){ %><%=input.lastName%><% } %>" />
                </div>
                <div class="form-group">
                  <input type="file" name="image" value="Add your image" />
                </div>
                <% if(validationErrs.email){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.email %> 
                  </div>
                <% } %>
                <div class="form-group <% if(validationErrs.email){ %><%='invalid'%><% } %>">
                  <label for="email"><i class="zmdi zmdi-email"></i></label>
                  <input type="email" name="email" placeholder="Email" value="<% if(input.email){ %><%=input.email%><% } %>"/>
                </div>
                <% if(validationErrs.username){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.username %> 
                  </div>
                <% } %>
                <div class="form-group <% if(validationErrs.username){ %><%='invalid'%><% } %>">
                  <label for="username"><i class="zmdi zmdi-email"></i></label>
                  <input type="text" name="username" placeholder="Username" value="<% if(input.username){ %><%=input.username%><% } %>" />
                </div>
                <% if(validationErrs.password){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.password %> 
                  </div>
                <% } %>
                <div class="form-group <% if(validationErrs.password){ %><%='invalid'%><% } %>">
                  <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                  <input type="password" name="password" placeholder="Password" value="<% if(input.password){ %><%=input.password%><% } %>"/>
                </div>
                <% if(validationErrs.confirmPassword){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.confirmPassword %> 
                  </div>
                <% } %>
                <div class="form-group <% if(validationErrs.confirmPassword){ %><%='invalid'%><% } %>">
                  <label for="confirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                  <input type="password" name="confirmPassword"
                    placeholder="Repeat your password" />
                </div>
                <% if(validationErrs.position){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.position %> 
                  </div>
                <% } %>
                <div class="form-group <% if(validationErrs.position){ %><%='invalid'%><% } %>">
                  <label for="position"></label>
                  <input type="text" name="position"  placeholder="Enter the position" value="<% if(input.position){ %><%=input.position%><% } %>" />
                </div>
                <% if(validationErrs.accessLevels){ %>                            
                  <div class="validationErr">
                      <%= validationErrs.accessLevels %> 
                  </div>
                <% } %>
                <table class="table table-borderless" style="width:100%">
                  <tr>
                    <td scope="col">
                      <input type="checkbox" name="addProduct" />
                      <label for="product" class="label-agree-term">Add Product</label>
                    </td>
                    <td scope="col">
                      <input type="checkbox" name="editProduct" />
                      <label for="product" class="label-agree-term">Edit Product</label>
                    </td>
                    <td scope="col">
                      <input type="checkbox" name="deleteProduct"/>
                      <label for="agree-term" class="label-agree-term">Delete Product</label>
                    </td>
                  </tr>
                  <tr>
                    <td scope="col">
                      <input type="checkbox" name="addUser" />
                      <label for="agree-term" class="label-agree-term">Add User</label>
                    </td>
                    <td scope="col">
                      <input type="checkbox" name="editUser"  />
                      <label for="agree-term" class="label-agree-term">Edit User</label>
                    </td>
                    <td scope="col">
                      <input type="checkbox" name="deleteUser" />
                      <label for="agree-term" class="label-agree-term">Delete User</label>
                    </td>
                  </tr>
                  <tr>
                    <td scope="col">
                      <input type="checkbox" name="viewUsers" />
                      <label for="agree-term" class="label-agree-term">View Users</label>
                    </td>
                    <td scope="col">
                      <input type="checkbox" name="addCategory"/>
                      <label for="agree-term" class="label-agree-term">Add Category</label>
                    </td>
                    <td scope="col">
                      <input type="checkbox" name="editCategory"/>
                      <label for="agree-term" class="label-agree-term">Edit Category</label>
                    </td>
                  </tr>
                  <tr>
                    <td scope="col">
                      <input type="checkbox" name="deleteCategory" />
                      <label for="agree-term" class="label-agree-term">Delete Category</label>
                    </td>
                  </tr>
                </table>
                <div class="form-group form-button">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="submit" name="signup" id="signup" class="form-submit" value="<%= editUserAction %>" />
                </div>
              </form>
            </div>
            <div class="signup-image">
              <figure>
                <img src="/images/signup-image.jpg" alt="sing up image" />
              </figure>
            </div>
          </div>
        </div>
      </section>
    </div>
    <%- include("../includes/end.ejs") %> >